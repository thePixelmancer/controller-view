{
  "name": "controller-view",
  "displayName": "Controller View",
  "description": "Preview minecraft [bedrock] animation controllers as graphs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Controller View",
      "properties": {
        "controllerView.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the animation controller graph window when a valid controller file is focused."
        }
      }
    },
    "commands": [
      {
        "command": "controller-view.toggleAutoOpen",
        "category": "Animation Controllers",
        "title": "Toggle Graph Auto Open"
      },
      {
        "command": "controller-view.openViewer",
        "category": "Animation Controllers",
        "title": "Open graph preview window"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1"
  }
}
