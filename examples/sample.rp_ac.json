{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sample": {
      "states": {
        "default": {
          "animations": ["idle_base"],
          "transitions": [
            { "attack": "v.attack_time >= 0" }
          ],
          "blend_transition": 0.2
        },
        "attack": {
          "animations": ["idle_base", "attack_acid"],
          "transitions": [{ "default": "query.test1" }],
          "blend_transition": 0
        }
      }
    }
  }
}
